@page "/"
@using CarShowcase.Models
@using CarShowcase.Services
@inject ICarService CarService

<PageTitle>Car Showcase - Premium Cars</PageTitle>

<div class="hero-section">
    <div class="hero-content">
        <h1 class="display-4">Premium Car Showcase</h1>
        <p class="lead">Discover your dream car from our curated collection of premium vehicles</p>
        <a href="/cars" class="btn btn-primary btn-lg">Browse Cars</a>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Featured Cars</h2>
        </div>
    </div>

    @if (featuredCars == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var car in featuredCars.Take(3))
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@car.ImageUrl" class="card-img-top" alt="@car.Make @car.Model" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@car.Year @car.Make @car.Model</h5>
                            <p class="card-text">@car.Description</p>
                            <div class="mt-auto">
                                <p class="h5 text-primary">$@car.Price.ToString("N0")</p>
                                <a href="/car/@car.Id" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 100px 0;
        text-align: center;
    }

    .hero-content {
        max-width: 600px;
        margin: 0 auto;
    }
</style>

@code {
    private List<Car>? featuredCars;

    protected override async Task OnInitializedAsync()
    {
        featuredCars = await CarService.GetAllCarsAsync();
    }
}
